{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Arbitrum Migration Config",
  "type": "object",
  "properties": {
    "contracts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "path": { "type": "string" },
          "args": { "type": "array", "items": {} }
        },
        "required": ["name", "path", "args"]
      }
    },
    "verify": { "type": "boolean" }
  },
  "required": ["contracts"],
  "additionalProperties": true
}


